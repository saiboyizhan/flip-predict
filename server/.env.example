# ============================================
# Server Environment Variables
# ============================================
# Copy this file to .env and fill in the values.

# Server port
PORT=3001

# JWT Secret - MUST be changed from default or server will refuse to start
JWT_SECRET=change-this-to-a-random-secret

# JWT expiration time (default: 24h, examples: 7d, 30m, 2h)
JWT_EXPIRATION=24h

# CORS origin for production (required in production, optional in dev)
# Example: https://yourdomain.com
CORS_ORIGIN=

# PostgreSQL configuration
PG_HOST=localhost
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=postgres
PG_DB=prediction
# Alternatively, use a full connection string (overrides PG_* vars above):
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/prediction

# Initial signup balance (optional, credits given to new users)
# INITIAL_SIGNUP_BALANCE=1000

# Admin wallet addresses (comma-separated, lowercase)
ADMIN_ADDRESSES=

# Deposit receiver address (the wallet that receives on-chain USDT deposits)
DEPOSIT_RECEIVER_ADDRESS=

# Chain profile (testnet/mainnet). Default in code is testnet if omitted.
BSC_NETWORK=testnet

# Optional explicit chain ID override (97 for BSC testnet, 56 for BSC mainnet)
BSC_CHAIN_ID=97

# Base BSC RPC URL (shared fallback for on-chain verifications)
BSC_RPC_URL=https://bsc-testnet-rpc.publicnode.com

# Optional route-specific RPC overrides
# NFA_RPC_URL=
# DEPOSIT_RPC_URL=
# SETTLEMENT_RPC_URL=
# MARKET_CREATION_RPC_URL=

# Contracts/tokens used by backend verification
NFA_CONTRACT_ADDRESS=
PREDICTION_MARKET_ADDRESS=
SETTLEMENT_CONTRACT_ADDRESS=
USDT_ADDRESS=

# Settlement arbitration challenge window (milliseconds)
SETTLEMENT_CHALLENGE_WINDOW_MS=21600000

# Pinata IPFS (optional, for market image uploads)
# PINATA_JWT=
# IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs

# Zhipu GLM AI
# Get key at: https://open.bigmodel.cn/
ZHIPU_API_KEY=
ZHIPU_MODEL=glm-4-flash
